extends layout

block css
  link(href='../css/style.css', rel='stylesheet')

block content
  - var guestName = user.username
  - var guestId = user._id 
  - var guestPokemon = user.pokemon
  if (homeowner)
    - var homeownername = homeowner.username
    - var homeownerId = homeowner._id 
    - var homepokemon = homeowner.pokemon
    h1 Welcome to #{homeownername}'s home!
    .pokemonArea
      each pokemon in homeowner.pokemon
        h1= pokemon.name
        img(src= pokemon.image)
  else
    h1 Welcome home, #{guestName}
    h1 This is the visit page
    h1= guestStartPokemon
    button#logout Logout
  a.btn.btn-default#worldMap(href='/worldmap') World Map
  button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#tradeModal')
     | Trade Pokemon
   #tradeModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='tradeModalLabel')
     .modal-dialog(role='document')
       .modal-content
         .modal-header
           button.close(type='button', data-dismiss='modal', aria-label='Close')
             span(aria-hidden='true') Ã—
           h4#tradeModalLabel.modal-title Let's trade!
         .modal-body
           h1 #{homeownername}'s pokemon
           .homePokemon(data-id= homeownerId)
           .pokemonArea
             each pokemon in homeowner.pokemon
               h1= pokemon.name
               img(src= pokemon.image)
           h1 #{guestName}'s pokemon
           .guestPokemon(data-id= guestId, data-name= guestName)
           .pokemonArea
             each pokemon in user.pokemon
              h1= pokemon.name
              img(src= pokemon.image)
         .modal-footer
           button.btn.btn-default#makeTrade(type='button', data-dismiss='modal') Make Trade

  
  
  
block js
  script(src='../js/main.js')
